{
  "name": "Userver MMORPG Dev",
  "containerEnv": {
    "CCACHE_DIR": "/home/adrenal1ne/projects/cpp/mmorpg/.ccache",
    "CORES_DIR": "/cores",
    "PREFIX": "${PREFIX:-~/.local}",
    "SHELL": "/bin/bash",
    "CPU_LIMIT": "1"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "llvm-vs-code-extensions.vscode-clangd",
        "ms-vscode.cmake-tools",
        "ms-vscode.makefile-tools",
        "vadimcn.vscode-lldb",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "clangd.arguments": [
          "--background-index",
          "--compile-commands-dir=.vscode",
          "--clang-tidy",
          "--completion-style=detailed",
          "--header-insertion=never"
        ],
        "clangd.path": "/usr/bin/clangd",
        "cmake.automaticReconfigure": false,
        "cmake.configureOnEdit": false,
        "cmake.configureOnOpen": false,
        "cmake.copyCompileCommands": "${workspaceFolder}/.vscode/compile_commands.json"
      }
    }
  },
  "forwardPorts": [
    8080
  ],
  "image": "ghcr.io/userver-framework/ubuntu-22.04-userver-pg-dev:latest",
  "mounts": [],
  "onCreateCommand": "sudo git config --global --add safe.directory /home/adrenal1ne/projects/cpp/mmorpg",
  "remoteUser": "user",
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],
  "workspaceFolder": "/home/adrenal1ne/projects/cpp/mmorpg",
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/adrenal1ne/projects/cpp/mmorpg,type=bind"
}